<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :task_name %>
    <%= form.text_field :task_name, id: :task_task_name %>
  </div>

  <div class="field">
    <%= form.label "締切日時" %>
    <%= form.datetime_select :deadline, {minute_step: 5}, id: :task_deadline, value: Date.today, required: false %>
  </div>

  <div class="field">
    <%= form.label "かかる時間(分)" %>
    <%= form.number_field :required_time, id: :task_required_time %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, options_for_select(1..10), { autofocus: 'true', class: 'form-control'}, id: :task_priority %>
  </div>

  <div class="field" id="task-color">
    <%= form.label :color %>
    <%= form.select :color, [["Red", "red"], ["Orange", "orange"], ["Yellow", "yellow"], ["Green", "green"], ["Aqua", "aqua"], ["Blue", "blue"], ["Purple", "purple"]], id: :event_color %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :task_comment, :size => "50x5", :maxlength => "500" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
