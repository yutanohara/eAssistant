
<%= form_with(model: event, local: true, id: "event_form", data: {remote: true}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title, required: true %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :end, id: :event_end %>
  </div>

  <div class="field" >
    <%= form.label :color %>
    <%= form.select :color, [["Red", "red"], ["Orange", "orange"], ["Yellow", "yellow"], ["Green", "green"], ["Aqua", "aqua"], ["Blue", "blue"], ["Purple", "purple"]], include_blank: "指定なし", id: :event_color %>
  </div>

  <div class="field">
    <%= form.label :allDay %>
    <%= form.check_box :allDay, id: :event_allDay %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
